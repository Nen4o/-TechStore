<section class="create-hero">
    <div class="container">
        <h2>Create New Product</h2>
        <p>Fill in the details below to add a new product to the catalog.</p>
    </div>
</section>

<section class="create-form">
    <div class="container">
        <form method="POST">
            <div class="form-group">
                <label for="brand">Brand:</label>
                <input type="text" id="brand" value="{{deviceData.brand}}" name="brand">
            </div>
            <div class="form-group">
                <label for="model">Model:</label>
                <input type="text" id="model" value="{{deviceData.model}}" name="model">
            </div>
            <div class="form-group">
                <label for="hard-disk">Hard Disk:</label>
                <input type="text" id="hard-disk" value="{{deviceData.hardDisk}}" name="hardDisk">
            </div>
            <div class="form-group">
                <label for="screen-size">Screen Size:</label>
                <input type="text" id="screen-size" value="{{deviceData.screenSize}}" name="screenSize">
            </div>
            <div class="form-group">
                <label for="ram">RAM:</label>
                <input type="text" id="ram" value="{{deviceData.ram}}" name="ram">
            </div>
            <div class="form-group">
                <label for="operating-system">Operating System:</label>
                <input type="text" id="operating-system" value="{{deviceData.operatingSystem}}" name="operatingSystem">
            </div>
            <div class="form-group">
                <label for="cpu">CPU:</label>
                <input type="text" id="cpu" value="{{deviceData.cpu}}" name="cpu">
            </div>
            <div class="form-group">
                <label for="gpu">GPU:</label>
                <input type="text" id="gpu" value="{{deviceData.gpu}}" name="gpu">
            </div>
            <div class="form-group">
                <label for="price">Price:</label>
                <input type="text" id="price" value="{{deviceData.price}}" name="price">
            </div>
            <div class="form-group">
                <label for="gpu">Color:</label>
                <input type="text" id="color" value="{{deviceData.color}}" name="color">
            </div>
            <div class="form-group">
                <label for="gpu">Weight:</label>
                <input type="text" id="weight" value="{{deviceData.weight}}" name="weight">
            </div>
            <div class="form-group">
                <label for="image">Image:</label>
                <input type="text" id="image" value="{{deviceData.image}}" name="image">
            </div>
            <button type="submit" class="btn">Create Product</button>
        </form>
    </div>
</section>