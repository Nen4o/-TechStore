<section class="edit-form">
    <div class="container">
        <form method="POST">
            <div class="form-group">
                <label for="brand">Brand:</label>
                <input type="text" id="brand" name="brand" value="{{deviceData.brand}}">
            </div>
            <div class="form-group">
                <label for="model">Model:</label>
                <input type="text" id="model" name="model" value="{{deviceData.model}}">
            </div>
            <div class="form-group">
                <label for="hard-disk">Hard Disk:</label>
                <input type="text" id="hard-disk" name="hardDisk" value="{{deviceData.hardDisk}}">
            </div>
            <div class="form-group">
                <label for="screen-size">Screen Size:</label>
                <input type="text" id="screen-size" name="screenSize" value="{{deviceData.screenSize}}">
            </div>
            <div class="form-group">
                <label for="ram">RAM:</label>
                <input type="text" id="ram" name="ram" value="{{deviceData.ram}}">
            </div>
            <div class="form-group">
                <label for="operating-system">Operating System:</label>
                <input type="text" id="operating-system" name="operatingSystem" value="{{deviceData.operatingSystem}}">
            </div>
            <div class="form-group">
                <label for="cpu">CPU:</label>
                <input type="text" id="cpu" name="cpu" value="{{deviceData.cpu}}">
            </div>
            <div class="form-group">
                <label for="gpu">GPU:</label>
                <input type="text" id="gpu" name="gpu" value="{{deviceData.gpu}}">
            </div>
            <div class="form-group">
                <label for="price">Price:</label>
                <input type="text" id="price" name="price" value="{{deviceData.price}}">
            </div>
            <div class="form-group">
                <label for="gpu">Color:</label>
                <input type="text" id="color" name="color" value="{{deviceData.color}}">
            </div>
            <div class="form-group">
                <label for="gpu">Weight:</label>
                <input type="text" id="weight" name="weight" value="{{deviceData.weight}}">
            </div>
            <div class="form-group">
                <label for="image">Image:</label>
                <input type="text" id="image" name="image" value="{{deviceData.image}}">
            </div>
            <button type="submit" class="btn">Edit Product</button>
        </form>
    </div>
</section>